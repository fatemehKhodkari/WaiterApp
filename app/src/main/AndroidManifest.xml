        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaiterApp">
        <activity
            android:name=".activity.submittedorderdetail.SubmittedOrderDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.submittedorder.SubmittedOrderActivity"
