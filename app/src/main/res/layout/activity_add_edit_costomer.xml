<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.customer.AddEditCostomerActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/coffee_bk"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/back_add_edit_bottom"
            android:orientation="horizontal"
            android:showDividers="beginning"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></LinearLayout>

        <LinearLayout
            android:id="@+id/canter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:cardCornerRadius="10dp"
            android:paddingTop="100dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:ignore="MissingConstraints">

            <include layout="@layout/customer_insert_info"></include>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_add_edit_design_top"
            android:backgroundTint="@color/brownopa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="85dp"
                android:background="@drawable/back_add_edit_design_top"
                android:backgroundTint="@color/browwn"></LinearLayout>

            <LinearLayout
                android:layout_width="156.5dp"
                android:layout_height="116.5dp"
                android:background="@drawable/back_add_edit_design_top"
                android:backgroundTint="@color/browwn">

            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="115dp"
                android:background="@drawable/back_add_edit_design_top"
                android:backgroundTint="@color/whitediff"></LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="115dp"
                android:background="@drawable/back_add_edit_design_top"
                android:backgroundTint="@color/brownopa"></LinearLayout>

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="116dp"
                android:background="@drawable/back_add_edit_design_top"
                android:backgroundTint="@color/whitediff">

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>