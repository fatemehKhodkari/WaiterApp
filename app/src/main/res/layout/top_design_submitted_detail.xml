<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/top_detail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ordere_detial_imv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/whitediff"
        android:src="@drawable/person_circle_ic" />

    <TextView
        android:id="@+id/orderer_name_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordere_detial_imv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iran_sans"
        android:gravity="center"
        android:text="نام سفارش دهنده"
        android:textColor="@color/whitediff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ordere_phone_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderer_name_detail_tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/irsansfanum"
        android:gravity="center"
        android:text="09393808550"
        android:textColor="@color/whiteopa"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/back_submitted"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/arrow_back_ic" />

</RelativeLayout>