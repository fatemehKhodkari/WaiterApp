<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#00000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#00000000"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_add_edit_center"
            android:backgroundTint="@color/browwn"
            android:scaleType="fitXY"
            app:cardCornerRadius="100dp"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="200dp"></LinearLayout>

            <EditText
                android:id="@+id/et_get_name_customer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/whitediff"
                android:drawableRight="@drawable/person_ic"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="نام"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_get_phone_customer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/whitediff"
                android:drawableRight="@drawable/phone_ic"
                android:drawablePadding="10dp"
                android:gravity="right|center_vertical"
                android:hint="تلفن"
                android:inputType="phone"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/et_get_address_customer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/whitediff"
                android:drawableRight="@drawable/home_ic"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="ادرس "
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_save_customer"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@color/browwn"
                    android:gravity="center"
                    android:text="ذخیره"
                    android:textColor="@color/whitediff" />

                <TextView
                    android:id="@+id/tv_cancel_customer"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/whitediff"
                    android:gravity="center"
                    android:text="لغو"
                    android:textColor="@color/browwn" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>