<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/back_submited_order_info_all"
    android:elevation="1dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/browwn">


    <TextView
        android:id="@+id/name_orderer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/iran_sans"
        android:gravity="right"
        android:paddingVertical="5dp"
        android:paddingEnd="5dp"
        android:text="نام مشتری"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/matn" />


    <TextView
        android:id="@+id/date_of_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/irsansfanum"
        android:padding="6dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textColor="#9C9B9B"
        android:text="2021/12/14"/>

    <TextView
        android:id="@+id/time_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/irsansfanum"
        android:layout_toRightOf="@+id/date_of_ordered"
        android:padding="6dp"
        android:text="13:12"
        android:gravity="center"
        android:textColor="#a2a2a2"
        android:textSize="13dp" />


        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_orderer"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/white"
            android:elevation="15dp"
            android:background="@drawable/back_submited_order_info_in"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans"
                    android:padding="5dp"
                    android:text="وضعیت مشتری :"
                    android:textColor="#9C9B9B"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/status_orered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans"
                    android:paddingVertical="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="right"
                    android:text="در حال ارسال.."
                    android:textColor="#676767" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans"
                    android:padding="5dp"
                    android:text="جمع کل :"
                    android:textColor="#9c9b9b"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/total_ordered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irsansfanum"
                    android:paddingVertical="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="right"
                    android:text="88,000"
                    android:textColor="@color/browwn" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irsansfanum"
                    android:gravity="right"
                    android:text="تومان"
                    android:paddingVertical="5dp"
                    android:textSize="12dp"
                    android:textColor="#676767" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans"
                    android:padding="5dp"
                    android:text="توضیحات :"
                    android:textColor="#9c9b9b"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/explain_ordered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans"
                    android:paddingVertical="5dp"
                    android:paddingEnd="10dp"
                    android:gravity="right"
                    android:text="توضیحات بیشتر"
                    android:textColor="#747474" />

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/whitediff"
        android:layout_below="@+id/first"

        android:backgroundTint="@color/whitediff"
        android:orientation="vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_submitted_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_ic"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/delete_submitted_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_ic"
            android:layout_alignParentLeft="true"/>



    </RelativeLayout>

</RelativeLayout>