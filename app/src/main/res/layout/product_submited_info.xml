<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whitediff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/browwndiff"
            android:elevation="15dp"
            app:cardCornerRadius="10dp"></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"></androidx.cardview.widget.CardView>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/ordering_pic"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:text="نام محصول"
        android:fontFamily="@font/iran_sans"
        android:textSize="18dp"
        android:textColor="@color/matn"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت :"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#737373"
            android:fontFamily="@font/iran_sans"/>


        <TextView
            android:id="@+id/product_ordering_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@color/browwn"/>

        <TextView
            android:id="@+id/toman"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="تومان"
            android:textSize="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#737373"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/iran_sans"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="291dp"
        android:layout_marginTop="117.5dp"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/product_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/browwn"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/add_white_ic" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/product_number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            android:textColor="#737373"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/product_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/browwn"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/remove_ic" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:outlineSpotShadowColor="@color/browwn"
        app:cardBackgroundColor="@color/browwndiff"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/category_ic" />

            <TextView
                android:id="@+id/category_ordering_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:text="دسته بندی"
                android:textColor="@color/browwn"
                android:textSize="14dp"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>