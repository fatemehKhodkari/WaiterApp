<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/back_white_cards"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/whitediff"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/more_clock_ic"
            android:foregroundGravity="center"
            />
        <TextView
            android:id="@+id/clock_tv_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13:17:26"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/irsansfanum">
        </TextView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:backgroundTint="@color/gray"
        ></LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/whitediff"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calender_ic"
                android:foregroundGravity="center"
                />
            <TextView
                android:id="@+id/date_tv_bttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1400/10/21"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingVertical="15dp"
                android:textSize="16dp"
                android:fontFamily="@font/irsansfanum">
            </TextView>
        </androidx.cardview.widget.CardView>

</LinearLayout>