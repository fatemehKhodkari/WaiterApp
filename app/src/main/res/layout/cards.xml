<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:layout_height="150dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            app:cardElevation="5dp"
            android:background="@drawable/rippelc"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:background="@drawable/shap_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:src="@drawable/product" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/brownopa"

                        >
                        <TextView
                            android:text="محصولات"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@fonts/IranianSans"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/circle_number">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7800"
                                android:textSize="11dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="textEnd"
                                android:paddingLeft="5dp"
                                android:textColor="#f8f3f7"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:cardElevation="5dp"
            android:layout_marginRight="2.5dp"
            app:cardBackgroundColor="@color/white"
            android:background="#FAFAFA"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout

                android:orientation="vertical"
                android:weightSum="3"
                android:background="@drawable/shap_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:src="@drawable/customers" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/brownopa"

                        >
                        <TextView
                            android:text="مشتری"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@fonts/IranianSans"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/circle_number">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7800"
                                android:textSize="11dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="textEnd"
                                android:paddingLeft="5dp"
                                android:textColor="#f8f3f7"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="150dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/grouping"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/shap_cards"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:src="@drawable/grouping" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/brownopa"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@fonts/IranianSans"
                            android:text="دسته بندی"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/circle_number">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7800"
                                android:textSize="11dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="textEnd"
                                android:paddingLeft="5dp"
                                android:textColor="#f8f3f7"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/submitted_orders"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:cardElevation="5dp"
            android:layout_marginRight="2.5dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout

                android:orientation="vertical"
                android:weightSum="3"
                android:background="@drawable/shap_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:src="@drawable/ordered" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/brownopa"

                        >
                        <TextView
                            android:text="سفارشات"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@fonts/IranianSans"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/circle_number">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7800"
                                android:textSize="11dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="textEnd"
                                android:paddingLeft="5dp"
                                android:textColor="#f8f3f7"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>