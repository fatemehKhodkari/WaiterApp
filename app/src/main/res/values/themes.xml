<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaiterApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/browwn</item>
        <item name="colorPrimaryVariant">@color/browwn</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/browwn</item>
        <item name="colorSecondaryVariant">@color/browwn</item>
        <item name="colorOnSecondary">@color/whitediff</item>
        <item name="colorPrimaryDark">@color/browwn</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:direction">right_to_left</item>
        <item name="android:layoutDirection">rtl</item>

        <!--        <item name="editTextColor">@color/text</item>-->
        <!--        <item name="android:textColorSecondary">@color/text</item>-->

        <!--        add to search-->
        <item name="android:textColorSecondary">@color/whitediff</item>
        <item name="android:editTextColor">@color/whitediff</item>


    </style>

    <style name="Theme.WaiterApp.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyTimePickerlight" parent="android:Widget.Material.TimePicker">
        <item name="android:background">@color/whitediff</item>
        <item name="android:headerBackground">@color/browwn</item>
        <item name="android:headerTimeTextAppearance">@color/browwn</item>
        <item name="colorOnBackground">@color/browwn</item>
        <item name="colorOnPrimary">@color/browwn</item>
        <item name="colorOnSecondary">@color/browwn</item>
        <item name="android:headerAmPmTextAppearance">@color/browwn</item>
        <item name="android:numbersTextColor">#B7703A</item>
        <item name="android:numbersSelectorColor">@color/browwn</item>
        <item name="android:numbersBackgroundColor">#E79061</item>
        <item name="colorAccent">@color/browwn</item>
        <item name="colorControlNormal">@color/browwn</item>
        <item name="android:backgroundTint">@color/browwndiff</item>
    </style>

</resources>